# 配置
CONFIG_MODULES=y
CONFIG_HAVE_DOT_CONFIG=y

# 机型选择
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_MULTI_PROFILE=y
CONFIG_TARGET_PER_DEVICE_ROOTFS=y
CONFIG_TARGET_DEVICE_mediatek_filogic_DEVICE_bananapi_bpi-r4=y
CONFIG_TARGET_DEVICE_mediatek_filogic_DEVICE_bananapi_bpi-r4-poe=y

# 镜像设置
CONFIG_TARGET_ROOTFS_TARGZ=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_IMAGES_GZIP=y

# 设置分区大小
CONFIG_TARGET_ROOTFS_PARTSIZE=448


# busybox
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_BUSYBOX_CONFIG_NANDWRITE=y
CONFIG_BUSYBOX_CONFIG_NANDDUMP=y

# 额外包
CONFIG_PACKAGE_autocore=y
